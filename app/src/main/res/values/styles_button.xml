<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.ButtonText.Container" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:background">@drawable/bg_button_text_border</item>
    </style>

    <style name="App.ButtonText.PrimaryText" parent="App.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="App.ButtonText.ImageChevronRight" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:src">@drawable/ic_round_chevron_right</item>
        <item name="android:tint">@android:color/darker_gray</item>
    </style>


</resources>
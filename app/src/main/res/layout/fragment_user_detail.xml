<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.users.detail.UserDetailFragment">

    <ImageView
        android:id="@+id/iv_user_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Full Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_user_pic"
        app:layout_constraintTop_toTopOf="@id/iv_user_pic"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="username"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        app:layout_goneMarginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_user_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_pic" />

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem/random"
        android:maxLines="4"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_pic"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_round_people_outline"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        tools:text="Company"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_company"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_goneMarginTop="20dp"
        android:drawableStart="@drawable/ic_outline_location_on"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        tools:text="Jakarta, ID"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_goneMarginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:drawableStart="@drawable/ic_outline_link"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        tools:text="https://blog.io"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_followers_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_blog"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_goneMarginTop="20dp"
        android:drawableStart="@drawable/ic_outline_person"
        tools:text="1k followers ▪️ 1k following"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>